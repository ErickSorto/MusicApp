<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/music_about_layout"
        android:background="@color/dark_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp">
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/category_darker"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="8dp">

                <TextView
                    android:id="@+id/song_name_info_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Name Sample"
                    android:gravity="center"
                    android:paddingBottom="6dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/category_lighter"
                    style="@style/SongNameStyle"/>
                <TextView
                    android:id="@+id/song_artist_info_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sample - hello"
                    style="@style/SongArtistStyle"/>
                <TextView
                    android:id="@+id/song_date_info_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/SongArtistStyle"
                    android:text="Date Sample"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:background="@color/category_darker">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingBottom="6dp"
                    android:gravity="center"
                    android:text="Description"
                    android:layout_marginBottom="8dp"
                    android:background="@color/category_lighter"
                    style="@style/SongNameStyle"/>
                <ScrollView
                    android:id="@+id/SCROLLER_ID"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:fillViewport="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="fewjfiowejfiowjfiwejiofjwioejfwweifjwijfiowejfiowejiofjweiojfiowejfiwiofjioewjfiowejweiojfwioejfweiofjweioweiofjweioweifjweiofjweoifjweiweijfweiojf"
                        android:id="@+id/description_tv"
                        android:scrollbars="vertical"
                        android:paddingRight="6dp"
                        style="@style/SongArtistStyle"
                        android:layout_weight="1"/>
                </ScrollView>


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/song_artist_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_above="@+id/music_about_layout">

            <ListView
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/dark_background"
                android:orientation="vertical"
                android:id="@+id/list"
                android:layout_above="@id/music_about_layout"
                android:layout_width="1dp">

            </ListView>
            <ListView
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/dark_background"
                android:orientation="vertical"
                android:id="@+id/list2"
                android:layout_above="@id/music_about_layout"
                >

            </ListView>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/music_about_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/play_image_view"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/play_button"
            android:background="@color/category_lighter"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/song_name_playing_tv"
            style="@style/SongPlayingStyle"
            android:background="@color/category_darker"
            android:text="Music Playing"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/info_song_playing_iv"
            style="@style/SongPlayingStyle"
            android:background="@color/category_lighter"
            android:src="@drawable/details_image"
            android:padding="8dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_width="60dp"
            />
    </LinearLayout>
</RelativeLayout>